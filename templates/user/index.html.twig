{% extends 'base.html.twig' %}

{% block title %}Lista utenti!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Lista utenti</h1>

    <a href="{{path('users.store')}}">
        <button type="button">
            Crea un utente
        </button>
    </a>

    <table>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nome
            </th>
            <th>
                Email
            </th>
            <th>
                Data creazione 
            </th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>
                    <a href="{{ path('users.show', {'id': user.id}) }}">
                        {{ user.name }}
                    </a>
                </td>
                <td>{{ user.email }}</td>
                <td>{{ user.createdAt.getTimestamp() }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
